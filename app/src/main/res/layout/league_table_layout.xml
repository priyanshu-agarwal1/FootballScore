<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/loadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loadingText"
        android:paddingLeft="@dimen/list_padding" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teamName"
            android:layout_weight="2"
            android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:paddingLeft="25dp"
            android:textSize="12dp"
            android:textColor="#ff000000"
            android:layout_gravity="center|left"/>

        <TextView
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Pos"
            android:layout_weight="2"
            android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:paddingLeft="140dp"
            android:textSize="12dp"
            android:textColor="#ff000000"
            android:layout_gravity="center|left"/>

        <TextView
            android:id="@+id/playedGames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/P"
            android:layout_weight="2"
            android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:paddingLeft="180dp"
            android:textSize="12dp"
            android:textColor="#ff000000"
            android:layout_gravity="center|left"/>

        <TextView
            android:id="@+id/goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/G"
            android:layout_weight="2"
            android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:paddingLeft="220dp"
            android:textSize="12dp"
            android:textColor="#ff000000"
            android:layout_gravity="center|left"/>

        <TextView
            android:id="@+id/goalsAgainst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/GA"
            android:layout_weight="2"
            android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:paddingLeft="260dp"
            android:textSize="12dp"
            android:textColor="#ff000000"
            android:layout_gravity="center|left"/>

        <TextView
            android:id="@+id/goalDifference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/GD"
            android:layout_weight="2"
            android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:paddingLeft="300dp"
            android:textSize="12dp"
            android:textColor="#ff000000"
            android:layout_gravity="center|left"/>

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PTS"
            android:layout_weight="2"
            android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:paddingLeft="330dp"
            android:textSize="12dp"
            android:textColor="#ff000000"
            android:layout_gravity="center|left"/>


    </RelativeLayout>


    <com.github.rahatarmanahmed.cpv.CircularProgressView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cpv_indeterminate="true"
        app:cpv_animAutostart="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/list2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="#ffe3e3e3"
        android:paddingTop="22dp"
        android:cacheColorHint="#80bebebe"
        android:divider="@null"
        android:dividerHeight="0.5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>